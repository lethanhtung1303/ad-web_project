<h3 class="text-center">Thông tin cá nhân</h3>
<div class="text-center">
    <img class="rounded-circle" src="/images/avt.png" alt="" width="100px" />
</div>
<form id="form-profile" action="/updateProfile" method="POST">
    <div class="form-group">
        <label for="idUser">ID:</label>
        <input
            type="text"
            class="form-control"
            placeholder="Enter idUser"
            id="idUser"
            name="idUser"
            value="51800830"
            readonly=""
        />
    </div>

    <div class="form-group">
        <label for="name">Tên:</label>
        <input
            type="text"
            class="form-control"
            placeholder="Enter name"
            id="name"
            value="Lê Thanh Tùng"
            readonly=""
        />
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input
            type="email"
            class="form-control"
            name="email"
            placeholder="Enter email"
            id="email"
            value="51800830@student.tdtu.edu.vn"
            readonly=""
        />
    </div>

    <div class="form-group">
        <label for="gender">Giới tính</label>

        <select name="gender" id="gender" value="0">
            <option value="0">Nam</option>
            <option value="1">Nữ</option>
        </select>
    </div>

    <div class="form-group">
        <label for="class">Lớp:</label>
        <input
            type="text"
            class="form-control"
            value=""
            name="classroom"
            placeholder="Enter class"
            id="classroom"
            required=""
        />
    </div>

    <div class="form-group">
        <label for="faculty">Khoa:</label>
        <input
            type="text"
            name="faculty"
            class="form-control"
            value=""
            placeholder="Enter faculty"
            id="faculty"
            required=""
        />
    </div>

    <button type="submit" class="btn btn-primary">Thay đổi</button>
</form>
