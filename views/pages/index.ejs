<button
    id="btn-Post"
    type="button"
    data-toggle="modal"
    data-target="#myModal"
    class="btn btn-secondary"
>
    Đăng bài viết
</button>
<% if(locals.profile.position !== 1){ %>
<button
    id="btn-Notify"
    type="button"
    data-toggle="modal"
    data-target="#modalNotify"
    class="btn btn-secondary"
>
    Đăng thông báo
</button>
<% } %>
<div class="container" id="postArea"></div>
<div id="loadPage"></div>

<!-- modal post -->
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Thêm bài viết</h4>
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
            </div>

            <!-- Modal body -->
            <form action="/">
                <div class="container">
                    <div class="form-group">
                        <label for="content">Nội dung:</label>
                        <textarea
                            class="form-control"
                            rows="5"
                            id="contentPost"
                            placeholder="Viết tại đây..."
                            name="text"
                        ></textarea>
                    </div>
                    <div class="form-group">
                        <label for="content">Link video hoặc hình ảnh:</label>
                        <textarea
                            class="form-control"
                            rows="2"
                            id="link"
                            placeholder="Link video hoặc hình ảnh..."
                            name="text"
                        ></textarea>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button
                        type="button"
                        id="btnPost"
                        class="btn btn-primary"
                        data-dismiss="modal"
                    >
                        Đăng
                    </button>
                    <button
                        type="button"
                        class="btn btn-danger"
                        data-dismiss="modal"
                    >
                        Đóng
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- modal Notify -->
<div class="modal" id="modalNotify">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Thêm thông báo</h4>
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
            </div>

            <!-- Modal body -->
            <form action="/">
                <div class="container">
                    <div class="form-group">
                        <label for="tittle">Tiêu đề:</label>
                        <textarea
                            class="form-control"
                            rows="2"
                            id="tittle"
                            placeholder="Tiêu đề thông báo..."
                            name="text"
                        ></textarea>
                    </div>
                    <div class="form-group">
                        <label for="content">Nội dung:</label>
                        <textarea
                            class="form-control"
                            rows="5"
                            id="contentNotify"
                            placeholder="Viết thông báo tại đây..."
                            name="text"
                        ></textarea>
                    </div>

                    <div class="form-group">
                        <label for="auths">Chọn phòng ban</label>
                        <select name="auths" id="auths">
                            <% profile.auths.forEach(val => { %> <% if(val ===
                            1) { %>
                            <option value="1">CTHSSV</option>
                            <% }else if(val === 2){ %>
                            <option value="2">PDH</option>
                            <% }else if(val === 3){ %>
                            <option value="3">PKT</option>
                            <% }else if(val === 4){ %>
                            <option value="4">PTC</option>
                            <% }else if(val === 5){ %>
                            <option value="5">CLC</option>
                            <% }else if(val === 6){ %>
                            <option value="6">TTTH</option>
                            <% }else if(val === 7){ %>
                            <option value="7">SDTC</option>
                            <% }else if(val === 8){ %>
                            <option value="8">ATEM</option>
                            <% }else if(val === 9){ %>
                            <option value="9">CSV</option>
                            <% }else if(val === 10){ %>
                            <option value="10">KL</option>
                            <% }else if(val === 11){ %>
                            <option value="11">TTNNTHVH</option>
                            <% }else if(val === 12){ %>
                            <option value="12">VCSKT</option>
                            <% }else if(val === 13){ %>
                            <option value="13">KDDT</option>
                            <% }else if(val === 14){ %>
                            <option value="14">KCNTT</option>
                            <% }else if(val === 15){ %>
                            <option value="15">LQTKD</option>
                            <% }else if(val === 16){ %>
                            <option value="16">KMT</option>
                            <% }else if(val === 17){ %>
                            <option value="17">KLDCD</option>
                            <% }else if(val === 18){ %>
                            <option value="18">KTCNH</option>
                            <% }else if(val === 19){ %>
                            <option value="19">KGDQT</option>
                            <% }else if(val === 20){ %>
                            <option value="20">KMTCN</option>
                            <% }else if(val === 21){ %>
                            <option value="21">PSDH</option>
                            <% }else{ %>
                            <option value="22">PDTMT</option>
                            <% } %> <% }) %>
                        </select>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button
                        type="button"
                        id="btnNotify"
                        class="btn btn-primary"
                        data-dismiss="modal"
                    >
                        Đăng
                    </button>
                    <button
                        type="button"
                        class="btn btn-danger"
                        data-dismiss="modal"
                    >
                        Đóng
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- postarea -->
<div class="homepage__post" id="postArea"></div>

