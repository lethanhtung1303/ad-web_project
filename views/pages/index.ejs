                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button
                        type="button"
                        id="btnNotify"
                        class="btn btn-primary"
                        data-dismiss="modal"
                    >
                        Đăng
                    </button>
                    <button
                        type="button"
                        class="btn btn-danger"
                        data-dismiss="modal"
                    >
                        Đóng
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

