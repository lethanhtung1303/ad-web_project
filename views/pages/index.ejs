<button
    id="btn-Post"
    type="button"
    data-toggle="modal"
    data-target="#myModal"
    class="btn btn-secondary"
>
    Đăng bài viết
</button>
<% if(locals.profile.position !== 1){ %>
<button
    id="btn-Notify"
    type="button"
    data-toggle="modal"
    data-target="#modalNotify"
    class="btn btn-secondary"
>
    Đăng thông báo
</button>
<% } %>
<div class="container" id="postArea"></div>
<div id="loadPage"></div>

<!-- modal post -->
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Thêm bài viết</h4>
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
            </div>

            <!-- Modal body -->
            <form action="/">
                <div class="container">
                    <div class="form-group">
                        <label for="content">Nội dung:</label>
                        <textarea
                            class="form-control"
                            rows="5"
                            id="contentPost"
                            placeholder="Viết tại đây..."
                            name="text"
                        ></textarea>
                    </div>
                    <div class="form-group">
                        <label for="content">Link video hoặc hình ảnh:</label>
                        <textarea
                            class="form-control"
                            rows="2"
                            id="link"
                            placeholder="Link video hoặc hình ảnh..."
                            name="text"
                        ></textarea>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button
                        type="button"
                        id="btnPost"
                        class="btn btn-primary"
                        data-dismiss="modal"
                    >
                        Đăng
                    </button>
                    <button
                        type="button"
                        class="btn btn-danger"
                        data-dismiss="modal"
                    >
                        Đóng
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- modal Notify -->
<div class="modal" id="modalNotify">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Thêm thông báo</h4>
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
            </div>

            <!-- Modal body -->
            <form action="/">
                <div class="container">
                    <div class="form-group">
